{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ProtonMail",
  "version": "0.0.2",
  "identifier": "com.protonmail-wrapper.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/trayicon.png",
      "tooltip": "ProtonMail"
    },
    "windows": [
      {
        "title": "ProtonMail",
        "width": 3024,
        "height": 3024
      }
