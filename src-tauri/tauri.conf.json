{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ProtonMail",
  "version": "0.0.2",
  "identifier": "com.protonmail-wrapper.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/trayicon.png",
      "tooltip": "ProtonMail"
    },
    "windows": [
      {
        "title": "ProtonMail",
        "width": 3024,
        "height": 3024
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
